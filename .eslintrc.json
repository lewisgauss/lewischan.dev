{
  "root": true,
  "extends": [
    "airbnb",
    "airbnb/hooks",
    "prettier",
    "plugin:react/jsx-runtime" // Needed for the new JSX transform feature from React
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "rules": {
    "react/jsx-filename-extension": 0
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": [
          "src"
        ]
      }
    }
  }
}